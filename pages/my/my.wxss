/* 主按钮容器 */
.saveCon{
    margin-bottom: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 80%;
    min-height: 100rpx;
    border-radius: 5px;
    transition: all 0.3s ease-in-out;
}
/* 主按钮样式 */
.saveCon .saveBtn{
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height:100rpx;
    border-radius: 5px;
    letter-spacing: 5rpx;
    background: linear-gradient(315deg, #0061a1, #005287);
    box-shadow: 0px 3px 5px #0075c2;
    transition: all 0.2s ease-in;
}
/* 主按钮hover样式 */
.saveCon .addBtn_hover{
    width: 98%;
    height:95rpx;
    background: linear-gradient(315deg, #0072be, #01548b);
    transition: all 0.2s linear;
}
/* 容器激活 */
.saveCon.active{
    padding: 10rpx 0 0 0;
    min-height: 300rpx;
    background: linear-gradient(315deg, #0061a1, #005287);
    transition: all 0.2s linear;
}
/* 计划列表容器 */
.saveCon .PlanShow{
    width: 90%;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 8rpx 10rpx;
    border-radius: 5px;
    background:linear-gradient(145deg, #c0dbf0, #a1b9ca);
}
/*  计划列表 */
.saveCon .PlanItem{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
/* 子按钮容器 */
.child{
    width: 90%;
    height: 25%;
    display: flex;
    flex-direction: row;
}
/* 子按钮样式 */
.child .childBtn{
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background: transparent;
}
/* 关于 */
.about{
    padding: 15rpx 0;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #fdf5e6;
}
